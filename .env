# 阿里云
ALIYUN_ACCESS_KEY_ID=你的AKID
ALIYUN_ACCESS_KEY_SECRET=你的AKSECRET
ALIYUN_APP_KEY=你的APPKEY
ALIYUN_REGION_ID=cn-shanghai
ALIYUN_DOMAIN=filetrans.cn-shanghai.aliyuncs.com
ALIYUN_API_VERSION=2018-08-17

# 文件服务
FILE_UPLOAD_URL=https://www.tobeasy.cn/api/v1/files/upload
FILE_MULTI_UPLOAD_URL=https://www.tobeasy.cn/api/v1/files/upload/multi
FILE_DELETE_URL=https://www.tobeasy.cn/api/v1/files/byUrl

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=root
RABBITMQ_PASS=yourpass
RABBITMQ_VHOST=/

PYTHON_REQUEST_QUEUE=python.transcription.request.queue
PYTHON_REQUEST_EXCHANGE=python.request.exchange
PYTHON_REQUEST_ROUTING_KEY=python.transcription.request

TRANSCRIPTION_RESULT_QUEUE=transcription.result.queue
TRANSCRIPTION_RESULT_EXCHANGE=transcription.result.exchange
TRANSCRIPTION_RESULT_ROUTING_KEY=transcription.result

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=yourpass
REDIS_DB=0
REDIS_TASK_KEY_PREFIX=task:
REDIS_TASK_TTL=3600

# MySQL（用于日志）
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DB=tobeasy
MYSQL_USER=root
MYSQL_PASSWORD=yourpass

# HLS/轮询
HLS_SEGMENT_TIME=6
MAX_POLLING_TIME=300
POLLING_INTERVAL=10
HEARTBEAT_INTERVAL=30

# 从 GitHub 拉远程配置（可选，不用就留空）
CONFIG_GITHUB_URL=

# ===== Eureka =====
EUREKA_ENABLED=true
EUREKA_SERVER=http://localhost:8761  # 支持 /eureka 与否都可以
EUREKA_APP_NAME=transcribe-service
EUREKA_PREFER_IP=true
EUREKA_HEARTBEAT_INTERVAL=30
EUREKA_LEASE_RENEWAL_INTERVAL=30
EUREKA_LEASE_EXPIRATION_DURATION=90
EUREKA_REGION=default
EUREKA_ZONE=default
# EUREKA_INSTANCE_HOSTNAME=    # 可选
# EUREKA_INSTANCE_IP=          # 可选
